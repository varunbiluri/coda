# LLM Configuration
USE_MOCK_LLM=false  # Set to 'true' to use mock client for testing/demo

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4 for better quality

# Azure OpenAI Configuration (alternative to OpenAI)
# If both are set, Azure OpenAI takes priority
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_MODEL=gpt-35-turbo  # Your deployment name

# Coda Server Configuration
CODA_HOST=0.0.0.0
CODA_PORT=8000

# Tokenizers Configuration (prevents warnings)
TOKENIZERS_PARALLELISM=false

# ChromaDB Configuration
CHROMA_COLLECTION=coda_repo

# Logging Configuration
LOG_LEVEL=INFO

# Docker Configuration
DOCKER_NETWORK=none  # Network isolation for testing

# Development Configuration
DEBUG=false
